<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dario.clinapp.controller.PagosController">
    <children>
        <VBox>
            <children>
                <HBox alignment="TOP_CENTER" spacing="15.0">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Paciente" />
                                <ComboBox fx:id="cmbPaciente" prefWidth="150.0" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Tipo" />
                                <ComboBox fx:id="cmbTipoPago" prefWidth="150.0" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Medio" />
                                <ComboBox fx:id="cmbFormaPago" prefWidth="150.0" />
                            </children>
                        </VBox>
                        <TextField fx:id="txtMonto" promptText="Monto">
                            <HBox.margin>
                                <Insets top="15.0" />
                            </HBox.margin>
                        </TextField>
                        <DatePicker fx:id="dateFecha">
                            <HBox.margin>
                                <Insets top="15.0" />
                            </HBox.margin>
                        </DatePicker>
                        <TextField fx:id="txtNotas" promptText="Notas">
                            <HBox.margin>
                                <Insets top="15.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox spacing="10.0" alignment="CENTER">
                    <children>
                        <Button fx:id="btnAgregar" text="Registrar Pago" onAction="#registrarPago" />
                        <Button fx:id="btnEditar" text="Editar" onAction="#editarPago" />
                        <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarPago" />
                        <Button fx:id="btnLimpiar" text="Limpiar" onAction="#limpiarFormulario" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>
                <TableView fx:id="tablaPagos">
                    <columns>
                        <TableColumn fx:id="colPaciente" prefWidth="120.0" text="Paciente" />
                        <TableColumn fx:id="colTipoPago" prefWidth="100.0" text="Tipo" />
                        <TableColumn fx:id="colFormaPago" prefWidth="120.0" text="Medio" />
                        <TableColumn fx:id="colMonto" prefWidth="100.0" text="Monto" />
                        <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha" />
                        <TableColumn fx:id="colNotas" prefWidth="150.0" text="Notas" />
                    </columns>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </children>
</StackPane>